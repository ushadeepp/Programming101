# Binary Search Implementaion, i.e. Search an element X in sorted Array of size N


l=0;
r=N-1;

WHILE (l < = r)
        mid = l + (r - l) // 2; 
        # Check if x is present at mid 
        IF (arr[mid] == X) 
            Print mid;
            Break;
        # If X is greater, ignore left half 
        ELSE IF  (arr[mid] < X) 
            l = mid + 1;
        # If X is smaller, ignore right half 
        ELSE 
            r = mid - 1
ENDWHILE;

